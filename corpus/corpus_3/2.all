#IMPLEMANTATION DU DICO
def dict_count(d, k) :
  k=k.lower() #r√©duit la cha√Æne de caract√®re en miniscules
  if(d.has_key(k)) :
    d[k] += 1
  else: d[k] = 1

#CREATION D'UN DICO DEPUIS UNE CHAINE
def dico(s,fun_decoupe):
  s,d=fun_decoupe(s),{}
  for k in s:
    dict_count(d,k)
  return d

