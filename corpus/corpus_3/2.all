#TRANSFORMATION DU CHEMIN EN LANGUE
def langue(chem):
  chem=chem.split("/")
  for x in chem:
    if "." in x:
      x=x.split(".")
      return x[-2][0:2]

def somme(liste):
  res=0
  for x in liste:
    res+=x
  return res


